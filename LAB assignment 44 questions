//1st program to calculate simple interest.
#include <stdio.h>

int main() {
    float p, r, t,Z;
    printf("Enter principal, rate, time: ");
    scanf("%f %f %f", &p, &r, &t);
    Z = (p * r * t) / 100;
    printf("Simple Interest = %f\n", Z);
    return 0;
}

//2nd this program is to calculate total marks and percentage.

#include<stdio.h>
int main() {
    float a,b,c,d,e,sum,percentage;
    printf("Enter the marks of 5 subjects: ");
    scanf("%f %f %f %f %f",&a,&b,&c,&d,&e);
   sum=a+b+c+d+e;
   printf("the total marks are %f\n",sum);
   percentage=(sum/500)*100;
   printf("the percentage is %f",percentage);
    return 0;
}

//3rd program to create gross salary
     #include <stdio.h> 
    int main() {
    float basic, gross,DA,HRA;

    printf("Enter the basic salary: ");
    scanf("%f", &basic);
    printf("enter percentage of DA: ");
    scanf("%f",&DA);
    printf("enter percentage of HRA: ");
    scanf("%f",&HRA);
    
    gross = basic + (basic * DA/100) + (basic * HRA/100);

    // Display the gross salary
    printf("Gross Salary = %f\n", gross);

    return 0;
 
}

//4th PROGRAM TO CONVERT TEMPERATURE FROM FAHRENHEIT TO CENTIGRADE 
DEGREES.

#include <stdio.h>

int main() {
    float f, c;

    printf("enter the value of farenheit");
    scanf("%f", &f);
    
    c=(f - 32) * 5 / 9;
    printf("the value in celcius %f",c);

    return 0;
}

//5th program to swap 2 variables with using 3rd variable 


#include <stdio.h>

int main() {
    int a, b,c;
    printf("enter the value of a and b\n");
    scanf("%d %d", &a, &b);
    c = a;
    a = b;
    b = c;
    printf("%d %d", a, b);
    return 0;
}


//6th program to swap 2 variable without using 3rd variable 

#include <stdio.h>

int main() {
    int a, b;
    printf("enter the value of a and b\n");
    scanf("%d%d",&a,&b);
    a=a+b; 
    b=a-b;
    a=a-b;
    printf("the value is %d %d",a,b);
    return 0;
}


//7th program to calculate area of triangle 

#include<stdio.h>
int main()
{
int b,h,A;
printf("enter the value of base and height\n");
scanf("%d%d",&b,&h);
A=0.5*b*h;
printf("the area of the triangle is %d",A);
return 0;
}

//8th program to calculate the time of revolution of the earth


#include <stdio.h>

int main() {
    int totalSeconds = 31558150; // Earth's revolution time in seconds
    int days, hours, minutes,seconds;

    // Calculate days
    days = totalSeconds / 86400; // 1 day = 24 hours * 60 minutes * 60 seconds

    // Calculate remaining seconds after days
    totalSeconds %= 86400;

    // Calculate hours
    hours = totalSeconds / 3600; // 1 hour = 60 minutes * 60 seconds

    // Calculate remaining seconds after hours
    totalSeconds %= 3600;

    // Calculate minutes
    minutes = totalSeconds / 60;

   seconds= totalSeconds%60;

    // Display the result
    printf("Earth's revolution time:\n");
    printf("Days: %d\n", days);
    printf("Hours: %d\n", hours);
    printf("Minutes: %d\n", minutes);
    printf("seconds: %d\n", seconds);


    return 0;
}
